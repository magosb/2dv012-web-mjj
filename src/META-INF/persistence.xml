<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="xmascal-pu" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider> <!-- is this required? -->
        <jta-data-source>java:/jdbc/XmasCalendar</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties> <!-- Are any of these properties needed? Compare with backend project -->
            <!-- <property name="hibernate.connection.url" value=""/>
            <property name="hibernate.connection.driver_class" value=""/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/> -->
            <!-- <property name="hibernate.archive.autodetection" value="class"/> --> <!-- TODO: Might be needed? Remove if no issues -->
            <property name="hibernate.show_sql" value="false"/> <!-- TODO: Remove this before hand-in -->
            <property name="hibernate.format_sql" value="true"/>
            <!-- <property name="hbm2ddl.auto" value="update"/> -->
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/> <!-- Needed to avoid JPA lazy load exception -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect"/>
        </properties>
    </persistence-unit>
</persistence>
